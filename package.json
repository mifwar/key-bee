{
  "name": "@mifwar/key-bee",
  "version": "1.0.0",
  "description": "A TUI for browsing and searching keybindings across tools (skhd, tmux, nvim, karabiner, zsh, hammerspoon)",
  "type": "module",
  "license": "MIT",
  "author": "mifwar",
  "repository": {
    "type": "git",
    "url": "https://github.com/mifwar/key-bee.git"
  },
  "bugs": {
    "url": "https://github.com/mifwar/key-bee/issues"
  },
  "homepage": "https://github.com/mifwar/key-bee#readme",
  "keywords": [
    "tui",
    "terminal",
    "keybindings",
    "skhd",
    "tmux",
    "neovim",
    "karabiner",
    "dotfiles",
    "cli",
    "ink"
  ],
  "bin": {
    "key-bee": "dist/cli.js",
    "kb": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "npx tsx src/cli.ts",
    "build": "tsc -p tsconfig.build.json",
    "prepublishOnly": "npm run build",
    "format": "prettier . --write",
    "format:check": "prettier . --check"
  },
  "dependencies": {
    "fast-glob": "^3.3.3",
    "fuse.js": "^7.0.0",
    "ink": "^5.1.0",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/react": "^18.3.0",
    "prettier": "^3.3.3",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
